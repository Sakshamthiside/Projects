#Import the needed library

import pandas as pd

#Read the data

House = pd.read_csv('https://github.com/YBI-Foundation/Dataset/raw/main/Boston.csv')

#Explore the data

House.head()

House.info()

House.describe()

House.columns

#Model Building

from sklearn.model_selection import train_test_split

#Defining the variables
Y = House['MEDV']

X = House[['CRIM', 'ZN', 'INDUS', 'CHAS', 'NX', 'RM', 'AGE', 'DIS', 'RAD', 'TAX',
       'PTRATIO', 'B', 'LSTAT']]

X_train, X_test, Y_train, Y_test = train_test_split(X, Y, random_state = 2529)

X_train.shape, X_test.shape, Y_train.shape, Y_test.shape

#Model Selection

from sklearn.linear_model import LinearRegression

model = LinearRegression()

model.fit(X_train, Y_train)

model.intercept_

model.coef_

#Make Prediction



Y_predicted = model.predict(X_test)

#Accuracy of the model

from sklearn.metrics import mean_absolute_percentage_error

mean_absolute_percentage_error(Y_test, Y_predicted)

#***HurrayðŸ¥³***! My model is 83% accurate.
